import tkinter as tk
from tkinter import messagebox
import random

class TriviaGame:
    def __init__(self, root):
        self.root = root
        self.root.title("Trivia Game")
        self.root.configure(bg="black")

        # متغيرات اللعبة
        self.levels = {
            "easy": [("What is 2+2?", "4", ["4", "5", "6", "7"]), ("What is the capital of France?", "Paris", ["Paris", "London", "Berlin", "Madrid"]), ("What is 5*5?", "25", ["25", "20", "30", "35"])],
            "medium": [("Who wrote 'To Kill a Mockingbird'?", "Harper Lee", ["Harper Lee", "Mark Twain", "Jane Austen", "Charles Dickens"]), ("Who painted the Mona Lisa?", "Leonardo da Vinci", ["Leonardo da Vinci", "Pablo Picasso", "Vincent van Gogh", "Michelangelo"]), ("What is the boiling point of water in Celsius?", "100", ["100", "0", "50", "200"])],
            "hard": [("What is the square root of 144?", "12", ["12", "10", "15", "20"]), ("What is the largest mammal?", "Blue whale", ["Blue whale", "Elephant", "Giraffe", "Hippopotamus"]), ("Who discovered penicillin?", "Alexander Fleming", ["Alexander Fleming", "Marie Curie", "Albert Einstein", "Isaac Newton"])]
        }
        
        self.current_level = None
        self.current_question = 0

        # إظهار الرسالة لمدة 3 ثوان
        self.display_name_message()

    def display_name_message(self):
        # إنشاء نافذة فرعية لعرض الرسالة
        self.name_message_window = tk.Toplevel(self.root)
        self.name_message_window.configure(bg="black")  # تعيين خلفية النافذة الفرعية إلى اللون الأسود
        self.name_message_window.overrideredirect(True)  # تعيين النافذة الفرعية لعدم الظهور في شريط المهام

        # عرض الرسالة في النافذة الفرعية
        name_message = "Mr/Mostafa Ibrahim"
        tk.Label(self.name_message_window, text=name_message, fg="white", bg="black", font=("Helvetica", 16)).pack(expand=True)

        # انتظار 3 ثوانٍ قبل إغلاق النافذة الفرعية وعرض قائمة المستويات
        self.name_message_window.after(3000, self.display_level_selection)

    def display_level_selection(self):
        # إظهار نافذة اختيار المستوى
        self.level_window = tk.Toplevel(self.root)
        self.level_window.title("Select Level")
        self.level_window.configure(bg="black")

        # إضافة خيارات المستوى
        levels = ["Easy", "Medium", "Hard"]
        for level in levels:
            tk.Button(self.level_window, text=level, bg="black", fg="white", font=("Helvetica", 12), command=lambda l=level: self.start_game(l)).pack()

    def start_game(self, selected_level):
        # إغلاق نافذة اختيار المستوى
        self.level_window.destroy()

        # تعيين المستوى المحدد
        self.current_level = selected_level.lower()
        self.current_question = 0

        # عرض السؤال الأول
        self.display_question()

    def display_question(self):
        # اختيار سؤال عشوائي من المستوى الحالي
        question, correct_answer, options = random.choice(self.levels[self.current_level])

        # عرض السؤال
        self.question_label = tk.Label(self.root, text=question, font=("Helvetica", 12), bg="black", fg="white")
        self.question_label.pack(pady=20)

        # عرض الخيارات
        self.options_var = tk.StringVar()
        self.options_var.set(options[0])  # اختيار الخيار ال
